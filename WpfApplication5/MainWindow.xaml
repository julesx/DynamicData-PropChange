<Window x:Class="WpfApplication5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication5"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <DataTemplate x:Key="ListBoxItemTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Header}" />
                <CheckBox IsChecked="{Binding Favorite}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <ListBox ItemsSource="{Binding AllItems}" ItemTemplate="{StaticResource ListBoxItemTemplate}" Height="200">
            
        </ListBox>

        <ListBox Grid.Column="1" ItemsSource="{Binding FavoriteItems}" ItemTemplate="{StaticResource ListBoxItemTemplate}" Height="200">
            
        </ListBox>
    </Grid>
</Window>

    
    